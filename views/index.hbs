<div>
  <div>
    <div class="input-group">
      <select class="form-select" name="category" id="category">
        <option value="0"> 全部 </option>
        <option value="1"> 家居物業 </option>
        <option value="2"> 交通出行 </option>
        <option value="3"> 休閒娛樂 </option>
        <option value="4"> 餐飲食品 </option>
        <option value="5"> 其他 </option>
      </select>
    </div>
    <div>
      <h4>總金額:</h4>
    </div>
    <div>
      <h1>{{totalAmount}}</h1>
    </div>
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item">        
        <div class="row align-items-center">
          <div class="col-1 text-center">
            <h2 class="record-category-icon "><i class="fa-2x {{this.categoryIcon}} "></i></h2>
          </div>
          <div class="col">
            <h4 class="mb-0">{{ this.name }}</h4>
            <h5 class="text-muted">{{ this.date }}</h5>
          </div>
          <div class="col">
            <h4 class="mb-0 text-end">{{this.amount}}</h4>
          </div>
          <div class="col-auto">
            <a class="btn btn-success" href="./todos/this._id/edit">edit</a>
            <form action="./todos/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-danger" type="submit">delete</button>
            </form>
          </div>
        </div>        
      </li>
      {{/each}}
    </ul>
  </div>
</div>